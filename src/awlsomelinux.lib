#############################
# Check for Dialog Function # check_dialog
#############################
# This function makes sure  #
# 'Dialog' is installed.    #
#############################

check_dialog()
{
	which dialog &> /dev/null
	[ $? -ne 0 ] && echo "The Package 'dialog' is not installed but required. Please install it by 'apt-get install dialog' to continue." && exit 1
}
