######################
# Directory Controls #
######################

### Make Directory Function ###
make_directory()
{
	if [ -d "$SRC_DIR/core" ]; then
		echo "Core Directory Already Created. Skipping..."
	else
		echo "Creating Core Directories..."
		mkdir $SRC_DIR/core
		mkdir $SRC_DIR/core/source
		mkdir $SRC_DIR/core/work
		mkdir $SRC_DIR/core/install
		echo "Directories Created."
	fi
	if [ -d "SRC_DIR/isoimage" ]; then
		echo "Image Directory Already Created. Skipping..."
	else
		echo "Creating Image Directories..."
		mkdir $SRC_DIR/isoimage
		mkdir $SRC_DIR/isoimage/image
		echo "Directories Created."
	fi
}
		
